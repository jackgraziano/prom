<div class="container">
  <div class="row">
    <h1>Clientes</h1>

    <%= link_to 'Adicionar', new_client_path , class: 'btn btn-primary' %>

    <table class="table">
      <tr>
        <th>Cliente</th>
        <th>Telefone</th>
        <th>Cadastrado em</th>
      </tr>

      <% @clients.each do |client| %>
        <tr>
          <td><%= link_to client.name, client_path(client) %></td>
          <td><%= client.phone %></td>
          <td><%= client.created_at %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
